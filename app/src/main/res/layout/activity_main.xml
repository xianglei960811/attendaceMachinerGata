<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:background="#00BFFF"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/attendance_title"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:text="移动考勤系统"
            android:textColor="@android:color/black"
            android:textSize="25sp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="bottom">

            <Button
                android:id="@+id/main_In"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="考勤"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/main_Out"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                android:layout_weight="1"
                android:background="#00BFFF"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="出去"
                android:textColor="#000"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/main_atten_lesson"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="#00BFFF"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="上课（考试）   考勤"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/main_atten_teaching"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="#00BFFF"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="教职工考勤"
                android:textColor="#000"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/main_atten_record"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="记录查询"
                android:textColor="#000"
                android:textSize="25sp" />

            <Button
                android:id="@+id/main_setup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="设置"
                android:textColor="#000"
                android:textSize="25sp" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>