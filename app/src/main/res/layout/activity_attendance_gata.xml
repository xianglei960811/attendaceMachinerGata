<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AttendanceInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:background="#00BFFF"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/attendance_gata_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:background="#00000000"
            android:src="@drawable/back1" />

        <TextView
            android:id="@+id/attendance_gata_title"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:text="学生详情"
            android:textColor="@android:color/black"
            android:textSize="25sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/attendance_gata_hide"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/tv_broad"
                    android:text="提示：请将卡片放入刷卡区刷卡"
                    android:textColor="#00FF00"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/attendance_gata_people_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/back1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓名："
                            android:textColor="#000"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/attendance_gata_people_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="张三"
                            android:textColor="#000"
                            android:textSize="25sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="班级："
                            android:textColor="#000"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/attendance_gata_people_class"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015级4班"
                            android:textColor="#000"
                            android:textSize="25sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="性别："
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/attendance_gata_people_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textColor="#000"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="监护人："
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/attendance_gata_people_guardian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家长"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="电话："
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/attendance_gata_people_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345678901"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="身份："
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/attendance_gata_people_quarter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普通"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/attendance_gata_bt_in"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_button"
                    android:text="进入"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/attendance_gata_bt_out"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_button"
                    android:text="离开"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/attendance_gata_bt_back"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_button"
                    android:text="返回"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/attendance_gata_bt_currency"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_button"
                    android:text="通用"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/attendance_gata_bt_back1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_button"
                    android:text="返回"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

