<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/setup_cont"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:background="#00BFFF"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/atten_steup_back"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-10dp"
                android:background="#00000000"
                android:src="@drawable/back1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:text="参数配置"
                android:textColor="@android:color/black"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="机器号："
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/set_up_machine"
                android:maxLength="10"
                android:backgroundTint="#000000"
                android:textSize="20sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="电脑号："
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/set_up_computer"
                android:maxLength="10"
                android:backgroundTint="#000000"
                android:textSize="20sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="ip地址："
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/set_up_address"
                android:backgroundTint="#000000"
                android:maxLength="60"
                android:textSize="20sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="单位代码："
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/set_up_clientid"
                android:backgroundTint="#000000"
                android:textSize="20sp"
                android:maxLength="20"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="设备名称："
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="wrap_content"
                android:id="@+id/set_up_check_mac"
                android:textSize="20sp"
                android:text="考勤机1"
                android:backgroundTint="#000000"
                android:maxLength="10"
                android:inputType="number|numberDecimal"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="考勤模式："
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/set_up_sp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/set_up_password"
                android:backgroundTint="#000000"
                android:textSize="20sp"
                android:maxLength="20"
                android:visibility="gone"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="考勤模式："
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/set_up_sp_inOrout"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="*设置保存后app会自动关闭，需要重启清理缓存！"
                android:textSize="15sp"
                android:textColor="#CC0000"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:textColor="#000"
                android:text="保存"
                android:id="@+id/set_up_save"
                android:textSize="20sp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/set_up_back"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>